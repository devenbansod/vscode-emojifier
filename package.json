{
	"name": "emojifier",
	"displayName": "emojifier",
	"description": "Transform text to equivalent emojis",
	"version": "0.0.1",
	"publisher": "devenbansod",
	"engines": {
		"vscode": "^1.45.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:markdown"
	],
	"main": "./dist/extension",
	"contributes": {
		"commands": [
			{
				"command": "emojifier.convertSelectionToEmoji",
				"title": "Convert to Emoji",
				"when": "resourceLangId == markdown && editorHasSelection"
			},
			{
				"command": "emojifier.addPatternToIgnore",
				"title": "Ignore pattern for Emojis",
				"when": "resourceLangId == markdown && editorHasSelection"
			},
			{
				"command": "emojifier.convertEmojisAcrossDocument",
				"title": "Convert Emojis across Document",
				"when": "resourceLangId == markdown && !editorHasSelection"
			}
		],
		"menus": {
			"editor/context": [
				{
					"when": "resourceLangId == markdown && editorHasSelection",
					"command": "emojifier.convertSelectionToEmoji",
					"group": "emojifier"
				},
				{
					"when": "resourceLangId == markdown && editorHasSelection",
					"command": "emojifier.addPatternToIgnore",
					"group": "emojifier"
				},
				{
					"when": "resourceLangId == markdown && !editorHasSelection",
					"command": "emojifier.convertEmojisAcrossDocument",
					"group": "emojifier"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "webpack --mode production",
		"compile": "webpack --mode none",
		"watch": "webpack --mode none --watch",
		"lint": "eslint src --ext ts",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js",
		"test-compile": "tsc -p ./"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"@types/vscode": "^1.45.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"@typescript-eslint/parser": "^2.30.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"ts-loader": "^7.0.4",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0",
		"webpack": "^4.43.0",
		"webpack-cli": "^3.3.11"
	}
}
